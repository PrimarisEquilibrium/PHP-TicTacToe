<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./styles/style.css" />
    <title>TicTacToe</title>
  </head>
  <body>
    <div class="wrapper">
      <h1>Tic - tac - toe</h1>
      <span>Player 
      <span 
        style="{{ player_to_move == 'X' ? 'color: blue' : 'color: red' }}">
        `{{ player_to_move }}
      `</span> turn to move!</span>
      <span>Winner: {{ winner }}</span>
      <div class="board-container">
        {% for r, row in board %}
        <div class="row">
          {% for c, cell in row %}
          <div class="cell {{ cell }}" data-row="{{r}}" data-col="{{c}}">{{ cell }}</div>
          {% endfor %}
        </div>
        {% endfor %}
      </div>
    </div>
    <script src="../dest/index.js"></script>
  </body>
</html>
